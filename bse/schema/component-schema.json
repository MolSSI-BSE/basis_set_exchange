{
    "title": "BasisSetComponent",
    "description": "A component of a basis set",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "molssi_bse_magic",
        "basisSetName",
        "basisSetDescription",
        "basisSetRole",
        "basisSetElements"
    ],
    "properties":
    {
        "molssi_bse_magic": {
            "description": "Magic number for BSE project",
            "type": "integer",
            "enum": [ 1 ]
        },
        "basisSetName": {
            "description": "Common name for the basis set",
            "type": "string"
        },
        "basisSetDescription": {
            "description": "Brief description of the basis set",
            "type": "string"
        },
        "basisSetRole": {
            "description": "The role of this component in a calculation",
            "type": "string",
            "enum": [ "orbital", "ri", "ecp" ]
        },
        "basisSetElements": {
            "description": "Data for the elements of the basis set",
            "type": "object",
            "additionalProperties": false,
            "patternProperties":   {
                "\\d+" : {
                    "description": "Data for a single element in the basis set",
                    "type": "object",
                    "additionalProperties": false,
                    "required": [ "elementReferences" ],
                    "properties": {
                        "elementReferences": {
                            "description": "Citation/Reference information for this element",
                            "type": "array",
                            "minItems": 1,
                            "uniqueItems": true,
                            "items": {
                                "type": "string"
                            }
                        },
                        "elementElectronShells": {
                            "description": "(Electronic) shells for this element",
                            "type": "array",
                            "minItems": 1,
                            "uniqueItems": true,
                            "items": {
                                "type": "object",
                                "description": "Information for a single electronic shell",
                                "additionalProperties": false,
                                "required": [
                                    "shellFunctionType",
                                    "shellHarmonicType",
                                    "shellRegion",
                                    "shellAngularMomentum",
                                    "shellExponents",
                                    "shellCoefficients"
                                ],
                                "properties": {
                                    "shellFunctionType": {
                                        "description": "Type of function for this shell",
                                        "type": "string",
                                        "enum": [ "gto", "sto" ]
                                    },
                                    "shellHarmonicType": {
                                        "description": "Harmonic type (spherical, cartesian)",
                                        "type": "string",
                                        "enum": [ "spherical", "cartesian" ]
                                    },
                                    "shellRegion": {
                                        "description": "The region this shell describes",
                                        "type": "string",
                                        "enum": [ "valence", "polarization", "core", "tight" ]
                                    },
                                    "shellAngularMomentum": {
                                        "description": "Angular momentum (as an array of integers)",
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": true,
                                        "items": {
                                            "type": "integer",               
                                            "minimum": 0
                                        }
                                        
                                    },
                                    "shellExponents": {
                                        "description": "Exponents for this contracted shell",
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": false,
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "shellCoefficients": {
                                        "description": "General contraction coefficients for this contracted shell",
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": false,
                                        "items": {
                                            "description": "Segmented contraction coefficients",
                                            "type": "array",
                                            "minItems": 1,
                                            "uniqueItems": false,
                                            "items": { "type": "string" }
                                        }
                                    }
                                }
                            }
                        },
                        "elementECPElectrons":
                        {
                            "description": "Number of electrons replaced by ECP",
                            "type": "integer",
                            "minimum": 1
                        },
                        "elementECP": {
                            "description": "Effective Core Potential for this element",
                            "type": "array",
                            "minItems": 1,
                            "uniqueItems": true,
                            "items": {
                                "type": "object",
                                "description": "ECP potential",
                                "additionalProperties": false,
                                "required": [
                                    "potentialECPType",
                                    "potentialAngularMomentum",
                                    "potentialRExponents",
                                    "potentialGaussianExponents",
                                    "potentialCoefficients"
                                ],
                                "properties": {
                                    "potentialECPType": {
                                        "description": "Type of the ECP Potential",
                                        "type": "string",
                                        "enum": [ "scalar", "spinorbit" ]
                                    },
                                    "potentialAngularMomentum": {
                                        "description": "Angular momentum (as an array of integers)",
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": true,
                                        "items": {
                                            "type": "integer",               
                                            "minimum": 0
                                        }
                                    },
                                    "potentialRExponents": {
                                        "description": "Exponents of the r term",
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": false,
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "potentialGaussianExponents": {
                                        "description": "Exponents of the gaussian term",
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": false,
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "potentialCoefficients": {
                                        "description": "General contraction coefficients for this contracted shell",
                                        "type": "array",
                                        "minItems": 1,
                                        "uniqueItems": false,
                                        "items": {
                                            "description": "Segmented contraction coefficients",
                                            "type": "array",
                                            "minItems": 1,
                                            "uniqueItems": false,
                                            "items": { "type": "string" }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
